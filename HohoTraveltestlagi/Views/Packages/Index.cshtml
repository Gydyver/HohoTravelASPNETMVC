@model IEnumerable<HohoTraveltestlagi.Package>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<br><br><br><br><br><br>
<div style="padding-left:500px; height:470px;">
    <table class="table table-striped table-bordered table-responsive">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PackName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PackTrip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PackPrice)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            if (item.IsDeleted == "1")
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PackName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PackTrip)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PackPrice)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.PackID }, new { @class = "btn btn-warning" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.PackID }, new { @class = "btn btn-info" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.PackID }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        }

    </table>
    <div>
        @Html.ActionLink("Back to Dashboard", "Dashboard", "Admins") <br>
        @Html.ActionLink("Create a package", "Create", "Packages")
    </div>
</div>