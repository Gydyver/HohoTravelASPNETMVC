                                @Html.DisplayFor(modelItem => item.PackName, new { htmlAttributes = new { @class = "h6" } })
                                <br />
                                @Html.DisplayFor(modelItem => item.PackTrip, new { htmlAttributes = new { @class = "pt-lg-3 pt-2" } })
                                <div class="row mt-3">
                                    <div class="col-lg-6 col-md-6 col-sm-6 button-arrow ">
                                        @Html.ActionLink("Book Here", "Create", "Bookings", new { id = item.PackID, price = item.PackPrice }, null)
                                        @*<a href="booking.html" class="btn">Book Here</a>*@
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 price-rate">
