@model IEnumerable<HohoTraveltestlagi.Booking>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@*style="padding-left:250px; height:500px;""*@

<br><br><br><br><br><br>
<div ">
    <table class="table table-striped table-bordered table-responsive">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustPhNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TravelDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookMessage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Package.PackName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RekName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RekNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookStatus)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            if (item.IsDeleted == "1")
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BookDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustName, new { autocomplete = "off" })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustEmail, new { autocomplete = "off" })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustPhNum, new { autocomplete = "off" })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TravelDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BookMessage)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Package.PackName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RekName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RekNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BookStatus)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.BookID }, new { @class = "btn btn-info" }) |
                        @*@Html.ActionLink("Details", "Details", new { id = item.BookID }, new { @class = "btn btn-info" }) |*@
                        @Html.ActionLink("Delete", "Delete", new { id = item.BookID }, new { @class = "btn btn-danger" }) |
                        @Html.ActionLink("Update Status", "Update", new { id = item.BookID }, new { @class = "btn btn-warning" })
                    </td>
                </tr>
            }
        }
    </table>

    <div>
        @Html.ActionLink("Back to Dashboard", "Dashboard", "Admins")
    </div>
</div>